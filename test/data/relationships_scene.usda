{
    def "Source_A" (
        kind = "component"
    )
    {
    }

    def "Source_B" (
        kind = "component"
    )
    {
    }

    def "Node_01" (
        kind = "component"
    )
    {
        rel connection = </World/Source_A>
    }

    def "Node_02" (
        kind = "component"
    )
    {
        rel connection = </World/Source_B>
    }

    def "Node_03" (
        kind = "component"
